<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign active_jobs = data[1] | where_exp: "item", "item.endDate == nil or item.endDate == ''" %}
  {% assign active_sorted = active_jobs | sort: "startDate" | reverse %}
  {% assign completed_jobs = data[1] | where_exp: "item", "item.endDate != nil and item.endDate != ''" | sort: "endDate" | reverse %}
  {% assign work = active_sorted | concat: completed_jobs %}
  {% for content in work %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.startDate %}
            {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
            {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date }} </span>
                </td>
              </tr>
              {% if content.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
              {% if content.logo %}
                <tr>
                  <td class="text-center pt-2">
                    <div style="
                        display: inline-block;
                        background-color: #f8f9fa;
                        padding: 4px;
                        border-radius: 6px;
                        border: 1px solid #ddd;
                        max-width: 100%;
                      ">
                        <img src="{{ content.logo }}" alt="University Logo" style="max-height: 100%; max-width: 100px; object-fit: contain; ">
                    </div>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.position }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.name }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
