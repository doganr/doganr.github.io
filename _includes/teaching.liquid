<div class="col mb-4">
  <div class="card h-100">
    {% if course.image %}
    <img src="{{ course.image | relative_url }}" class="card-img-top" alt="{{ course.title }}">
    {% endif %}
    <div class="card-body">
      <h5 class="card-title">{{ course.title }}</h5>
      <p class="card-text">{{ course.description }}</p>
      <a href="{{ course.url | relative_url }}" class="btn btn-outline-primary btn-sm">View Course</a>
    </div>
  </div>
</div>
