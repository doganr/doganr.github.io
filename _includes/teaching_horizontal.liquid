<div class="col mb-4">
  <div class="card flex-md-row h-100">
    {% if course.image %}
    <img class="card-img-left flex-auto d-none d-md-block"
         src="{{ course.image | relative_url }}"
         alt="{{ course.title }}"
         style="width: 200px; object-fit: cover;">
    {% endif %}
    <div class="card-body d-flex flex-column align-items-start">
      <h5 class="mb-2">{{ course.title }}</h5>
      <p class="mb-3">{{ course.description }}</p>
      <a href="{{ course.url | relative_url }}" class="btn btn-outline-primary btn-sm mt-auto">View Course</a>
    </div>
  </div>
</div>
